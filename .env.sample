# Past Paper Concept Analyzer Environment Configuration

# Database
# Use SQLite for development
DATABASE_URL=sqlite:///db/concepts.db
# For PostgreSQL, use:
# DATABASE_URL=postgresql://username:password@localhost/concepts

# LLM Configuration
LLM_PROVIDER=openai
OPENAI_API_KEY=your-api-key-here
OPENAI_MODEL=gpt-4
OPENAI_MAX_TOKENS=8192
OPENAI_TEMPERATURE=0.0  # Lower for more deterministic results

# Chunking Configuration
MAX_CHUNK_SIZE=4000
CHUNK_OVERLAP=200

# Rate Limiting
RATE_LIMIT_CALLS=20  # Calls per minute
RATE_LIMIT_BATCH_SIZE=5  # Papers to process in one batch

# PDF Processing
OCR_ENABLED=false
# TESSERACT_PATH=/usr/local/bin/tesseract  # Path to Tesseract executable if using OCR
